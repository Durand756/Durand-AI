# Fichier .env.example
# Copiez ce fichier vers .env et remplissez vos valeurs

# Token Hugging Face (optionnel mais recommandé pour de meilleures performances)
# Obtenez-le sur: https://huggingface.co/settings/tokens
HF_TOKEN=your_hugging_face_token_here

# Configuration Flask
FLASK_ENV=production
FLASK_DEBUG=False

# Configuration pour Render
PORT=5000
PYTHON_VERSION=3.9

# Optimisations
TRANSFORMERS_CACHE=/tmp/transformers_cache
HF_HOME=/tmp/hf_cache

# Mode de génération (api ou local)
GENERATION_MODE=api

# URLs personnalisées (optionnel)
TORCH_INDEX_URL=https://download.pytorch.org/whl/cpu
HF_ENDPOINT=https://api-inference.huggingface.co
